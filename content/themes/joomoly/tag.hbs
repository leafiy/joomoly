{{!< default}}

{{! The main content area on the homepage }}
<main role="main" class="{{#if @blog.cover}} custom-bg{{else}} default-bg{{/if}}"{{#if @blog.cover}} style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="main-wrapper">
    {{> menu}}

        <h2 class="main-header">Tag archive: <span class="main-header--tagname">{{tag.name}} ({{pagination.total}})</span></h2>

        {{! Each post will be output using this markup }}
        {{#foreach posts}}
        <article class="{{post_class}} post-wrapper" data-cols="3">
            <div class="post-wrapper_helper post-wrapper_helper--notloaded el-transition">
                {{content words="0"}}

                <div class="post-preview el-transition">    
                    <header class="post-header">
                        <h2 class="post-title">
                            <a href="{{url}}" class="post-link post-title_link"><span>{{{title}}}</span></a>
                        </h2>
                    </header>
                    
                    <p class="post-excerpt"><a href="{{url}}" class="post-link post-readmore">{{excerpt characters="120"}}&hellip;</a></p>
                </div>

                <footer class="post-meta">
                    {{#if tags}}

                    <ul class="post-tags">
                        {{#foreach tags}}
                        <li class="post-tag"><a href="{{url}}" class="post-link post-tag_link"> <i class="fa fa-tags"></i>{{name}}</a>{{#if @last}} {{else}}, {{/if}}</li>
                        {{/foreach}}
                    </ul>
                    {{/if}}
                </footer>
            </div>
        </article>
        {{/foreach}}
    </div>

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}
</main>