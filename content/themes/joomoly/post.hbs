{{!< default}}

<main role="main">
    <div class="main-wrapper">
        {{> menu}}

        {{! Everything inside the #post tags pulls data from the post }}
        <article class="{{post_class}}">
        {{#post}}
            {{#contentFor "metaTags"}} 
                <meta property="article:author" content="{{author.name}}">
            {{/contentFor}}

            <div class="post-wrapper--subpage">    
                <div class="post-media"></div>

                <header class="post-header--subpage">
                    <h2 class="post-title post-title--subpage">
                        <a href="{{url}}" class="post-link post-title_link">{{{title}}}</a>
                    </h2>

                    <time datetime="{{date format='YYYY-MM-DD'}}" class="post-date">
                       <i class="fa fa-clock-o"></i> {{date format="MMM, DD, YYYY"}}
                    </time> 
                </header>

                <section class="post-content">
                    {{content}}
                </section>

                <footer class="post-footer">
                    <div class="social social--share">

                    </div>
                    
                    {{#if tags}}
                    <ul class="post-meta post-meta--subpage">
                      {{#foreach tags}}
                        <li class="post-tag"><a href="{{url}}" class="post-link post-tag_link"><i class="fa fa-tags"></i>{{name}}</a>{{#if @last}} {{else}}, {{/if}}</li>
                      {{/foreach}}
                    </ul>
                    {{/if}}
                </footer>
            </div>

            <aside class="author">
                {{#if author.image}}
                <a href="{{author.website}}" class="author-avatar">
                    <img src="{{author.image}}" alt="{{author.name}}">
                </a>
                {{/if}}

                <span class="author-name">{{author}} </span>
                <p class="author-bio">
                	{{author.bio}}
                </p>
            </aside>

            <div class="post-comments">
                <div id="uyan_frame"></div>
                <script type="text/javascript" src="http://v2.uyan.cc/code/uyan.js"></script>
            </div>
        {{/post}}
        </article>
    </div>
</main>
