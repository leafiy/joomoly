{{!-- In this file you can override your pagination --}}
<nav class="pagination">
    <div class="pagination-wrap">
	    {{#if next}}
	        <a class="pagination-item pagination-item--link pagination-item--older" href="{{page_url next}}">下一页</a>
	    {{/if}}
	   	<span class="pagination-item pagination-item--counter">第 {{page}} 页 / 共 {{pages}} 页</span>
	    {{#if prev}}
	        <a class="pagination-item pagination-item--link pagination-item--newer" href="{{page_url prev}}">上一页</a>
	    {{/if}}
	</div>
</nav>